const Concept4 = '/images/carrousel/Concept-4.svg';
---

<script>
  function copyInstallCommand() {
    const installCommandEl = document.getElementById('install-command');
    if (!installCommandEl) return;

    const installCommand = installCommandEl.textContent?.trim();
    if (!installCommand) return;

    navigator.clipboard
      .writeText(installCommand)
      .then(() => {
        const copyButton = document.getElementById('copy-install-btn');
        if (!copyButton) return;

        const originalContent = copyButton.innerHTML;
        copyButton.innerHTML = 'âœ“';
        copyButton.style.color = 'blue-500';

        setTimeout(() => {
          copyButton.innerHTML = originalContent;
          copyButton.style.color = '';
        }, 2000);
      })
      .catch((err) => {
        console.error('Failed to copy:', err);
      });
  }

  document.addEventListener('DOMContentLoaded', () => {
    const copyButton = document.getElementById('copy-install-btn');
    if (copyButton) {
      copyButton.addEventListener('click', copyInstallCommand);
    }
  });
</script>
