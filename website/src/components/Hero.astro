---
import Slider from '../react/components/Carrousel.tsx';
const Concept1 = '/images/carrousel/Concept-1.svg';
const Concept2 = '/images/carrousel/Concept-2.svg';
const Concept3 = '/images/carrousel/Concept-3.svg';
const Concept4 = '/images/carrousel/Concept-4.svg';
---

<section
  class="w-full h-full max-h-[90svh] overflow-hidden col-span-4 md:col-span-8 lg:col-span-12 text-sys-secondary grid grid-cols-4 grid-rows-[auto_1fr_120px_1fr] md:grid-cols-8 lg:grid-cols-12 items-center justify-start gap-4 border-2 border-sys-brd-secondary border-t-0 border-b-4 px-0 md:px-sys-pd-md lg:px-sys-pd-lg"
>
  <!-- <article
    class="hero w-full h-full flex flex-col items-center justify-center text-center px-sys-pd-md md:px-sys-pd-lg max-w-3xl mx-auto"
    style="max-height: calc(100svh - 64px);"
  >
  </article> -->
  <article
    class="beta mt-sys-sp-lg w-full max-w-2xl mx-auto lg:!mt-0 lg:pt-0 col-span-full"
  >
    <div
      class="flex flex-row items-center justify-center gap-sys-sp-md bg-sys-surface-secondary border-2 border-sys-brd-secondary border-dashed px-sys-pd-md py-sys-pd-xs rounded-md max-w-36 mx-auto"
    >
      <span class="w-2 h-2 block bg-indigo-500 rounded-full"></span>
      <p class="arc-body-2">Now in Beta</p>
    </div>
  </article>
  <article
    class="max-w-80 flex flex-col items-center justify-center gap-sys-sp-md w-full mx-auto px-sys-pd-md col-span-full row-start-2 row-span-1 mb-10"
  >
    <img
      src="/images/react-blueprint.svg"
      alt="React Blueprint Logo"
      class="desktop w-32 h-auto object-contain"
    />
    <div
      class="arch-title text-sys-primary text-4xl md:text-4xl font-bold flex flex-row items-center justify-center px-2 md:px-0 font-['Roboto_Mono'] uppercase tracking-wider"
    >
      Arch<span
        class="text-sys-blueprint text-6xl md:text-7xl ml-1 font-['Roboto_Mono'] uppercase"
        >UI</span
      >
    </div>
    <p class="text-sys-tertiary text-center text-lg px-0 md:px-4">
      A React and Tailwind component library inspired by architectural blueprint
      precision.
    </p>
    <div
      class="buttons-wrapper w-full flex flex-col items-center justify-center gap-sys-sp-md max-w-96"
    >
      <strong
        class="bg-sys-surface-tertiary/40 px-sys-pd-lg py-sys-pd-xs rounded-md flex items-center justify-center w-full"
      >
        <img
          src="/icons/code.svg"
          alt="Code Icon"
          class="w-4 h-4 inline-block mr-2 align-middle"
        />npm install @devtoti/archui-react
      </strong>
      <div
        class="buttons w-full flex flew-col items-center justify-center gap-sys-sp-md lg:flex-row"
      >
        <button
          class="bg-sys-surface-primary h-8 w-full border-2 border-sys-brd-primary text-sys-txt-primary rounded-md px-2 py-1"
          >Get Started</button
        >
        <button
          class="w-full h-8 underline underline-offset-4 bg-sys-surface-tertiary/50 rounded-md"
          >Github Repo</button
        >
      </div>
    </div>
  </article>
  <div
    class="absolute inset-0 desktop relative h-40 my-auto col-span-full row-start-3 -row-end-1flex items-center justify-center"
  >
    <Slider
      width="500px"
      duration={25}
      pauseOnHover={true}
      blurBorders={false}
      blurBorderColor={'#fff'}
      client:only="react"
    >
      <Slider.Slide>
        <img
          src={Concept1}
          alt="Concept 1"
          class="opacity-50 hover:opacity-100 px-4 w-full h-auto"
        />
      </Slider.Slide>
      <Slider.Slide>
        <img
          src={Concept2}
          alt="Concept 2"
          class="opacity-50 hover:opacity-100 px-4 w-full h-auto"
        />
      </Slider.Slide>
      <Slider.Slide>
        <img
          src={Concept3}
          alt="Concept 3"
          class="opacity-50 hover:opacity-100 px-4 w-full h-auto"
        />
      </Slider.Slide>
      <Slider.Slide>
        <img
          src={Concept4}
          alt="Concept 4"
          class="opacity-50 hover:opacity-100 px-4 w-full h-auto"
        />
      </Slider.Slide>
    </Slider>
  </div>
  <img
    src="/images/column-hero.svg"
    alt="Column Hero"
    class="desktop w-auto h-full col-start-2 col-span-2 grow-2 object-none row-start-4 row-span-1"
  />
  <img
    src="/images/column-hero.svg"
    alt="Column Hero"
    class="desktop w-full h-full col-start-6 col-span-2 lg:col-start-10 object-none row-start-4 row-span-1"
  />
  <article
    class="mobile relative row-start-3 row-span-1 md:hidden hero-images w-full h-full max-w-5xl mx-auto grid grid-cols-4 md:grid-cols-8 lg:grid-cols-12 items-center justify-center gap-0 mt-sys-sp-lg px-2 col-span-full"
  >
    <div class="absolute inset-0 flex items-center justify-center">
      <Slider
        width="500px"
        duration={25}
        pauseOnHover={true}
        blurBorders={false}
        blurBorderColor={'#fff'}
        client:only="react"
      >
        <Slider.Slide>
          <img
            src={Concept1}
            alt="Concept 1"
            class="opacity-50 hover:opacity-100 px-4 w-full h-auto"
          />
        </Slider.Slide>
        <Slider.Slide>
          <img
            src={Concept2}
            alt="Concept 2"
            class="opacity-50 hover:opacity-100 px-4 w-full h-auto"
          />
        </Slider.Slide>
        <Slider.Slide>
          <img
            src={Concept3}
            alt="Concept 3"
            class="opacity-50 hover:opacity-100 px-4 w-full h-auto"
          />
        </Slider.Slide>
        <Slider.Slide>
          <img
            src={Concept4}
            alt="Concept 4"
            class="opacity-50 hover:opacity-100 px-4 w-full h-auto"
          />
        </Slider.Slide>
      </Slider>
    </div>
  </article>
  <img
    src="/images/column-hero.svg"
    alt="Column Hero"
    class="z-10 w-auto h-auto row-start-4 row-span-1 col-start-2 col-span-2 mobile"
  />
</section>
<style>
  .beta {
    margin-top: 0 !important;
  }

  @media (max-width: 768px) {
    .desktop {
      display: none !important;
    }
  }
  @media (min-width: 768px) {
    .mobile {
      display: none !important;
    }
  }
</style>
